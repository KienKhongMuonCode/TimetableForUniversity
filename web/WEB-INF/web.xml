<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LecturerAttController</servlet-name>
        <servlet-class>controller.lecturer.AttController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerTimetableController</servlet-name>
        <servlet-class>controller.lecturer.LecturerTimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.home.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendStatusController</servlet-name>
        <servlet-class>controller.lecturer.AttendStatusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTimetableController</servlet-name>
        <servlet-class>controller.student.StudentTimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAttendStatusController</servlet-name>
        <servlet-class>controller.student.StudentAttendStatusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attendstatusView</servlet-name>
        <jsp-file>/view/student/attendstatus.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>homeView</servlet-name>
        <jsp-file>/view/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerTimetableController</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerAttController</servlet-name>
        <url-pattern>/lecturer/takeatt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendStatusController</servlet-name>
        <url-pattern>/lecturer/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTimetableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAttendStatusController</servlet-name>
        <url-pattern>/student/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attendstatusView</servlet-name>
        <url-pattern>/student/attendstatus/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeView</servlet-name>
        <url-pattern>/homeView</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>